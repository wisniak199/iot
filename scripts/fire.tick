stream
  |from()
    .database('test')
    .measurement('iot')
    .where(lambda: "type" == 'flame')
  |window()
    .period(10s)
    .every(10s)
  |mean('value')
    .as('mean_value')
  |alert()
    .stateChangesOnly()
    .log('/home/wisniak199/kapacitor_movement.log')
    .info(lambda: "mean_value" > 0.3)
    .warn(lambda: "mean_value" > 0.7)
    .exec('/home/wisniak199/iot/serwer/scripts/fire.py')
