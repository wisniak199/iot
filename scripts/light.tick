stream
  |from()
    .database('test')
    .measurement('iot')
    .where(lambda: "type" == 'grayscale')
  |window()
    .period(10s)
    .every(10s)
  |mean('value')
    .as('mean_value')
  |alert()
    .log('/home/wisniak199/kapacitor_light.log')
    .info(lambda: "mean_value" > 3.5)
    .exec('/home/wisniak199/iot/serwer/scripts/light.py')
    .warn(lambda: "mean_value" < 2.5)
